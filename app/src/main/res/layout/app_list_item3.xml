<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_vertical_margin"
        android:layout_marginTop="@dimen/standard_horizontal_margin"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_horizontal_margin"
        android:layout_marginStart="@dimen/half_horizontal_margin"
        android:layout_marginTop="@dimen/half_horizontal_margin"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android
        android:text="title"/>

    <TextView

        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/double_horizontal_margin"
        android:layout_marginStart="@dimen/standard_horizontal_margin"
        android:layout_marginTop="@dimen/standard_horizontal_margin"
        android:textColor="@color/colorPrimary"
        android:text="description"/>
    </LinearLayout>


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/half_vertical_padding"
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_horizontal_margin"
        android:text="rating"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="casualpuppy"
        android:maxLines="2"
        android:text="price"/>
</LinearLayout>


</LinearLayout>