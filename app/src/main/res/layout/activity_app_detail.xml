<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView

                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_horizontal_margin"
                android:layout_marginTop="@dimen/half_horizontal_margin"
                android:layout_weight="2"
                android:text="Title" />

            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/double_vertical_padding"
                android:textColor="@android:color/holo_red_light"
                android:id="@+id/app_developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_horizontal_margin"
                android:layout_weight="1"
                android:text="Developer name" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/double_vertical_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/double_vertical_padding"
                android:id="@+id/app_large_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:paddingTop="@dimen/double_vertical_padding"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/half_horizontal_margin">

                <TextView
                    android:textColor="@android:color/holo_red_light"
                    android:id="@+id/app_rating"
                    android:textStyle="italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rating"
                    android:textSize="16dp"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@android:color/holo_red_light"
                    android:id="@+id/app_price"
                    android:textStyle="italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/app_description"
            android:textSize="14dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/double_horizontal_margin"
            android:text="description"
            />


        </LinearLayout>
</ScrollView>